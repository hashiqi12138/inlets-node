    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "nodemon",
            "name": "Launch server",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "restart": true,
            "program": "${workspaceFolder}\\dist\\main.js"
        },
        {
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "nodemon",
            "name": "Launch client",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "restart": true,
            "program": "${workspaceFolder}\\dist\\client\\ws.js"
        }
    ]
}